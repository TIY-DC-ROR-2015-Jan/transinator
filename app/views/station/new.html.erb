<div class="newStationWrap">
	<h1>Add a new station to your dashboard</h1>

	<div class="newStationsSearch">
		<a href="#"><button id="search">Search Nearby</button></a>
	</div>

</div>

	<div id="resultsWrap" class="resultsWrap">

	<div class="row center">

		<div class="cell columns3">Metro Stations</div>

		<div class="cell columns3">Bus Stations</div>

		<div class="cell columns3">Bike Stations</div>

	</div>


	<div class="cell columns3">
		<div class="row">
				<div class="infoWrap">
					<div class="center">
						Station: <select id="rails">
							<script type="x-handlebars-template" id="rails-template">
								{{name}}
							</script>		
						</select>
					</div>
				</div>

				<div class="center">
					<a href="#"><button id="railsFavorite">Save as favorite</button></a>
				</div>
		</div>
	</div>

	<div class="cell columns3">
		<div class="row">
				<div class="infoWrap">
					<div class="center">
						Station: <select id="bus">
							<script type="x-handlebars-template" id="bus-template">
								{{name}}
							</script>		
						</select>
					</div>
				</div>

				<div class="center">
					<a href="#"><button id="busFavorite">Save as favorite</button></a>
				</div>
		</div>
	</div>

	

	<div class="cell columns3">
		<div class="row">
				<div class="infoWrap">
					<div class="center">
						Station: <select id="bike">
							<script type="x-handlebars-template" id="bike-template">
								{{name}}
							</script>		
						</select>
					</div>
				</div>

				<div class="center">
					<a href="#"><button id="bikeFavorite">Save as favorite</button></a>
				</div>
		</div>
	</div>

</div>
